<UserControl x:Class="Androsov.Desktop.Components.WebText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Androsov.Desktop.Components"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200">
    <Grid>
        <Label Content="Web text" HorizontalAlignment="Left" Margin="50,20,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
